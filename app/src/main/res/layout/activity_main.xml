<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7">

    <!-- Device Discovery Screen -->
    <LinearLayout
        android:id="@+id/layoutDeviceDiscovery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:paddingTop="60dp"
            android:paddingBottom="32dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/dabbot_logo"
                android:contentDescription="DabBot Logo"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DabBot"
                android:textSize="34sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your device to connect"
                android:textSize="17sp"
                android:textColor="#8E8E93"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Device List -->
        <TextView
            android:id="@+id/tvDiscoveryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available devices"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerDevices"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"/>

        <!-- Bottom Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF"
            android:elevation="8dp">

            <Button
                android:id="@+id/btnRefreshDevices"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Refresh"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/button_apple_primary"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Main Control Screen -->
    <ScrollView
        android:id="@+id/layoutMainControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:paddingTop="60dp"
                android:paddingBottom="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/dabbot_logo"
                        android:contentDescription="DabBot Logo"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DabBot"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvConnectedDevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connected"
                            android:textSize="15sp"
                            android:textColor="#34C759"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnDisconnect"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_disconnect"
                        android:background="@drawable/bg_icon_button"
                        android:contentDescription="Disconnect"
                        android:tint="#8E8E93"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Switch Control Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/bg_card_apple"
                android:elevation="2dp"
                android:padding="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Switch"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvSwitchStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OFF (0°)"
                            android:textSize="17sp"
                            android:textColor="#8E8E93"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/AppleSwitch"
                        android:checked="false"
                        android:scaleX="1.2"
                        android:scaleY="1.2"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Configure Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_card_apple"
                android:elevation="1dp">

                <LinearLayout
                    android:id="@+id/btnConfigureAngles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Configure Angles"
                        android:textSize="17sp"
                        android:textColor="#007AFF"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:contentDescription="Navigate"
                        app:tint="#8E8E93" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Angle Configuration Overlay -->
    <LinearLayout
        android:id="@+id/layoutAngleConfig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F2F2F7"
        android:visibility="gone">

        <!-- Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:paddingTop="48dp"
            android:paddingBottom="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnCancelConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textSize="17sp"
                    android:textColor="#007AFF"
                    android:textAllCaps="false"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="0dp"
                    android:paddingEnd="16dp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Configure"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"/>

                <Button
                    android:id="@+id/btnSaveAngles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="17sp"
                    android:textColor="#007AFF"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- OFF Angle Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_apple"
                    android:padding="32dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OFF Position"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:id="@+id/tvOffAngleValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0°"
                        android:textSize="64sp"
                        android:textColor="#007AFF"
                        android:fontFamily="sans-serif-thin"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"/>

                    <SeekBar
                        android:id="@+id/seekBarOffAngle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="180"
                        android:progress="0"
                        android:progressTint="#007AFF"
                        android:thumbTint="#007AFF"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="90°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="180°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- ON Angle Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_apple"
                    android:padding="32dp"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ON Position"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:id="@+id/tvOnAngleValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90°"
                        android:textSize="64sp"
                        android:textColor="#34C759"
                        android:fontFamily="sans-serif-thin"
                        android:layout_gravity="center"
                        android:layout_marginBottom="32dp"/>

                    <SeekBar
                        android:id="@+id/seekBarOnAngle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="180"
                        android:progress="90"
                        android:progressTint="#34C759"
                        android:thumbTint="#34C759"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="90°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="180°"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:gravity="end"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>